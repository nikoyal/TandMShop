<script>
    function OrderBy() {
        var orderByValue = document.getElementById("orderby").value;
        $.ajax({
            url: 'ViewAllPartial',
            data: { orderBy: orderByValue }, //your data
            type: 'GET',
            contentType: 'application/json',
            dataType: 'json',

            complete: function (result) {
                $("#partial").html(result.responseText)
            },
        });
    }
</script>